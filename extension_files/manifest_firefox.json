{
  "manifest_version": 2,
  "name": "jpdBlock",
  "description": "Base Level Extension",
  "version": "2.1.0",
  "content_scripts": [
    {
      "js": ["scripts/jpdb.js"],
      "matches": [
        "*://jpdb.io/*",
        "*://*.jpdb.io/*"
      ]
    },
    {
      "js": ["scripts/content.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "48": "icon48.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "jpdBlock",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ]
}
