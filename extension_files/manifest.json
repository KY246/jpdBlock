{
  "manifest_version": 3,
  "name": "jpdBlock",
  "description": "Base Level Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "js": ["scripts/jpdb.js"],
      "matches": [
        "*://jpdb.io/*",
        "*://*.jpdb.io/*"
      ]
    },
    {
      "js": ["scripts/content.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "favicon"
  ],
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*"],
      "matches": ["<all_urls>"],
      "extension_ids": ["*"]
    }
  ]
}