{
  "manifest_version": 3,
  "name": "jpdBlock",
  "description": "Base Level Extension",
  "version": "2.1.0",
  "content_scripts": [
    {
      "js": ["scripts/jpdb.js"],
      "matches": [
        "*://jpdb.io/*",
        "*://*.jpdb.io/*"
      ]
    },
    {
      "js": ["scripts/content.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "contextMenus"
  ]
}
